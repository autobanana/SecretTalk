<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Banana_White"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/ImageView01"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:src="@drawable/logo_secrettalk_banner" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingLeft="20dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp" >

                    <TextView
                        android:id="@+id/TextView03"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="10dp"
                        android:text="@string/about_program_Version"
                        android:textColor="@color/Banana_Setting_Gray"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/TextView04"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/about_program_VersionTextView"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/Banana_Setting_Gray"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp" >

                    <TextView
                        android:id="@+id/about_version"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="10dp"
                        android:text="@string/about_program_teamname"
                        android:textColor="@color/Banana_Setting_Gray"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/about_version_textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/about_program_AutoBanana"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/Banana_Setting_Gray"
                        android:textSize="14sp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/about_program_instructor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:paddingRight="10dp"
                    android:text="@string/about_program_developer"
                    android:textColor="@color/Banana_Setting_Gray"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginLeft="30dp"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/about_program_develpoer_textViwer1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3dp"
                        android:layout_marginTop="5dp"
                        android:text="@string/about_program_develpoer1"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/Banana_Setting_Gray"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/about_program_develpoer_textViwer2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3dp"
                        android:layout_marginTop="5dp"
                        android:text="@string/about_program_develpoer2"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/Banana_Setting_Gray"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/about_program_develpoer_textViwer3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="3dp"
                        android:layout_marginTop="5dp"
                        android:text="@string/about_program_develpoer3"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/Banana_Setting_Gray"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp" >

                    <TextView
                        android:id="@+id/TextView01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingRight="10dp"
                        android:text="@string/about_program_updatetitile"
                        android:textColor="@color/Banana_Setting_Gray"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/TextView02"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/about_program_updatetime"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/Banana_Setting_Gray"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/Banana_Setting_Gray_light"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="@string/about_program_speaktouser"
                        android:textColor="@color/Black" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
