<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context="com.example.secrettalk5.MainActivity$PlaceholderFragment" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_weight="1" >

        <TextView
            android:id="@+id/content_talking"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@color/yellow_Banana"
            android:gravity="center"
            android:text="TextView" />

        <TextView
            android:id="@+id/Time"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@color/yellow_Banana"
            android:gravity="center"
            android:text="TextView" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@color/yellow_Banana"
            android:gravity="center"
            android:text="TextView" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="10dp" >

        <ImageView
            android:id="@+id/cursor"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:background="@color/Banana_White"
            android:src="@drawable/abc_ab_bottom_solid_light_holo" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LinearLayout"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_weight="7"
        android:orientation="vertical" >

        <android.support.v4.view.ViewPager
            android:id="@+id/vPager_main"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="7"
            android:background="@color/Banana_White"
            android:flipInterval="30"
            android:persistentDrawingCache="animation" >

        </android.support.v4.view.ViewPager>

    </LinearLayout>

</LinearLayout>
