<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/a"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/Banana_Gray"
    android:padding="2dp"
    tools:context="com.example.secrettalk5.Listening_MyFragment$PlaceholderFragment" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <ListView
            android:id="@+id/Talking_ListView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/Banana_Gray" >

        </ListView>

        <Button
            android:id="@+id/button1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/button_bakcground"
            android:text="@string/Talking_talk_button" />

    </LinearLayout>

</FrameLayout>
